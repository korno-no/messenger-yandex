<div class="message  message_{{direction}}" >

    {{#if (eq type 'image')}}
        <div class="message_image">
            <img class="image" src={{text}}>

        </div>
    {{/if}}
     {{#if (eq type 'text')}}
        <div class="message_text">{{text}}</div>
     {{/if}}
    <div class="message_time">
        {{time}}
        {{#if (eq direction 'outgoing')}}
            <img class="svg message_checked" src="./assets/icons/checks-double-v.svg">
        {{/if}}
    </div>
</div>