{
  "extends": "airbnb-base",
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],

  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"},
  
  "env":    {
    "browser": true,
    "es6": true
  },
  "rules": {
    "max-len": [2, 100],
    "max-params": [2, 3],
    "@typescript-eslint/no-unused-vars": "warn",
    "no-unused-vars": "off",
    "no-console": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
   "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "ts": "never", // Если ты хочешь, чтобы .ts не указывались
        "js": "never" // То же для .js
       
      }
    ]
  },
  "globals": {
        "EventListener": "readonly",
        "HTMLElementEventMap": "readonly"
    },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"

      } 
    }
  }
}
